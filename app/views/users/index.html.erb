<h1>Dromedarial</h1>
<h2>Artsits</h2>
<hr>
<div class="container-cards">
  <div class="users-cards-grid">
    <% @users.each do |user| %>
    <div class="user-card">
      <div class="artist-name">
        <h3><%= link_to user.name, user_path(user) %></h3>
      </div>
      <div class="artist-role">
        <p><%= user.role %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
